        <Label x:Name="label1" Content="Категории товаров" HorizontalAlignment="Left" Margin="352,1,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Категории" HorizontalAlignment="Left" Margin="377,221,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
